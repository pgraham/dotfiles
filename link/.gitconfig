[color]
	ui = true

[core]
	editor = vim
	excludesfile = /home/pgraham/.gitignore-global

[alias]
	d  = diff
	ds = diff --staged
	st = status

  # Index manipulation
	ap = add --patch
	unst = reset HEAD
	co = checkout --

  # Commit shortcuts
	ci = commit -m
	cia = commit -am
	ci-cs-fixes = commit -m '"[minor] CS Fixes"'
	cia-cs-fixes = commit -am '"[minor] CS Fixes"'
	ci-ws-fixes = commit -m '"[minor] whitespace fixes"'
	cia-ws-fixes = commit -am '"[minor] whitespace fixes"'

	# Stash shortcuts
	spop = stash pop
	sshow = stash show
	slist = stash list

	# Log shortcuts
	log-stat = log --stat

[push]
	default = simple

[include]
	path = .gitconfig-user
